<form action="/inv/update" method="POST" id="updateForm">
  <label for="inv_make">Make *</label>
  <input type="text" name="inv_make" required 
  value="<%= typeof locals.inv_make !== 'undefined' ? locals.inv_make : '' %>">

  <label for="inv_model">Model *</label>
  <input type="text" name="inv_model" required 
  value="<%= typeof locals.inv_model !== 'undefined' ? locals.inv_model : '' %>">

  <label for="inv_year">Year *</label>
  <input type="text" name="inv_year" required minlength="4" maxlength="4"
  value="<%= typeof locals.inv_year !== 'undefined' ? locals.inv_year : '' %>">

  <label for="inv_description">Description *</label>
  <textarea name="inv_description" required><%= typeof locals.inv_description !== 'undefined' ? locals.inv_description : '' %></textarea>

  <label for="inv_image">Full Image Path *</label>
  <input type="text" name="inv_image" required 
  value="<%= typeof locals.inv_image !== 'undefined' ? locals.inv_image : '/images/vehicles/no-image.png' %>">

  <label for="inv_thumbnail">Thumbnail Path *</label>
  <input type="text" name="inv_thumbnail" required 
  value="<%= typeof locals.inv_thumbnail !== 'undefined' ? locals.inv_thumbnail : '/images/vehicles/no-image-thumb.png' %>">

  <label for="inv_price">Price *</label>
  <input type="number" step="0.01" name="inv_price" required 
  value="<%= typeof locals.inv_price !== 'undefined' ? locals.inv_price : '' %>">

  <label for="inv_miles">Mileage *</label>
  <input type="number" name="inv_miles" required 
  value="<%= typeof locals.inv_miles !== 'undefined' ? locals.inv_miles : '' %>">

  <label for="inv_color">Color *</label>
  <input type="text" name="inv_color" required 
  value="<%= typeof locals.inv_color !== 'undefined' ? locals.inv_color : '' %>">

  <label for="classificationList">Classification *</label>
  <%- classificationSelect %>

  <button type="submit" class="btn primary" disabled>Update Vehicle</button>

<input type="hidden" name="inv_id"
<% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
<% } %>>
</form>

<script src="/js/inv-update.js"></script>